<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fighttimer.stambeto09.fighttimer.AssignActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of rounds"
        android:id="@+id/roundView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/round_spinner"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/roundView"
        android:layout_toEndOf="@+id/roundView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Minutes for round"
        android:id="@+id/round_minutes_view"
        android:layout_below="@+id/round_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutes_spinner"
        android:layout_below="@+id/round_spinner"
        android:layout_toRightOf="@+id/round_seconds_view"
        android:layout_toEndOf="@+id/round_seconds_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seconds for round"
        android:id="@+id/round_seconds_view"
        android:layout_below="@+id/minutes_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/round_seconds_spinner"
        android:layout_below="@+id/minutes_spinner"
        android:layout_toRightOf="@+id/round_seconds_view"
        android:layout_toEndOf="@+id/round_seconds_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Break minutes"
        android:id="@+id/break_minutes_view"
        android:layout_below="@+id/round_seconds_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/break_minutes_spinner"
        android:layout_below="@+id/round_seconds_spinner"
        android:layout_alignLeft="@+id/round_seconds_spinner"
        android:layout_alignStart="@+id/round_seconds_spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Break seconds"
        android:id="@+id/textView2"
        android:layout_below="@+id/break_minutes_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/break_seconds_spinner"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/break_minutes_spinner"
        android:layout_alignStart="@+id/break_minutes_spinner" />

</RelativeLayout>
